doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
  title TheIdol
.container
  .row
    .col-md-4.offset-md-4
      .card.form-holder
        .card-body
          h1 new booking
          form#booking(action='' method='post')
            .form-group
              label surname
              input#surname.form-control(type='text' name='' placeholder='' required='')
            .form-group
              label phone number
              input#phone-number.form-control(type='text' name='' placeholder='' required='')
            .form-group
              label party size
              input#party-size.form-control(type='number' name='' placeholder='1' required='')
            .form-group
              label booking date
              input#booking-date.form-control(type='text' name='' placeholder='YYYY-MM-DD' required='')
            .row.mt-3
              .col-4.text-right
                input.btn.btn-primary(type='submit' value='submit')
script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js' integrity='sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0' crossorigin='anonymous')
script(src='/scripts/booking.js')
